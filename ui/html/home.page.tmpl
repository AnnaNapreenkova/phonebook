{{template "base" .}}
 
{{define "title"}}Домашняя страница{{end}}
 
{{define "main"}}
    <h2>Последние Заметки</h2>
    {{if .Numbers}}
     <table>
        <tr>
            <th>Имя</th>
            <th>Номер</th>
            <th>ID</th>
        </tr>
        {{range .Numbers}}
        <tr>
            <td><a href='/number?id={{.ID}}'>{{.Name}}</a></td>
            <td>{{.Phone}}</td>
            <td>#{{.ID}}</td>
        </tr>
        {{end}}
    </table>
    {{else}}
        <p>Здесь ничего нет... пока что!</p>
    {{end}}
{{end}}